<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="csrf-token" content="<%= csrfToken %>">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>
    <%= title %> - Bookshelf
  </title>
  <link rel="stylesheet" href="/css/bookshelf.css">
</head>

<body>
  <header>
    <nav>
      <div class="container">
        <a href="/home" class="logo">
          <%= user.display_name %>'s Bookshelf
        </a>
        <ul class="nav-links">
          <li class="dropdown">
            <button id="manage-books" class="managebooks">Manage Books</button>
            <div class="books-dropdown-content" id="books-dropdown-menu">
              <a href="#" class="dropdown-link" id="add-book-link">Add</a>
              <a href="#" class="dropdown-link" id="move-book-link">Move</a>
            </div>
          </li>
          <li><a href="/logout">Sign Out</a></li>
        </ul>
      </div>
    </nav>
  </header>

  <main class="container">

    <div class="spinner-container">
      <div class="spinner"></div>
    </div>

    <div id="book-sections">

      <section class="book-column" id="to-read">
        <div class="shelf-header">
          <h2>To Read</h2>
          <button class="clear-shelf-btn" data-shelf="to-read-books" title="Clear Shelf">
            <img src="/images/trash_can.png" alt="Clear Shelf Trash Icon" width="20">
          </button>
        </div>
        <ul id="to-read-books" class="bookshelf"></ul>
      </section>

      <section class="book-column" id="reading">
        <div class="shelf-header">
          <h2>Reading</h2>
          <button class="clear-shelf-btn" data-shelf="reading-books" title="Clear Shelf">
            <img src="/images/trash_can.png" alt="Clear Shelf Trash Icon" width="20">
          </button>
        </div>
        <ul id="reading-books" class="bookshelf"></ul>
      </section>

      <section class="book-column" id="read">
        <div class="shelf-header">
          <h2>Finished</h2>
          <button class="clear-shelf-btn" data-shelf="finished-books" title="Clear Shelf">
            <img src="/images/trash_can.png" alt="Clear Shelf Trash Icon" width="20">
          </button>
        </div>
        <ul id="finished-books" class="bookshelf"></ul>
      </section>

    </div>
  </main>

  <!-- Add Book Modal -->
  <div id="addBookModal" class="modal">
    <div class="modal-content">
      <span class="close">&times;</span>
      <h2>Add a New Book</h2>
      <form id="addBookForm">

        <div>
          <label for="book-title">Title:</label>
          <input type="text" id="book-title" name="title" required>
        </div>
        <div>
          <label for="book-author">Author:</label>
          <input type="text" id="book-author" name="author" required>
        </div>
        <div>
          <label for="book-status">Add to Shelf:</label>
          <select id="book-status" name="status" required>
            <option value="to-read-books">To Read</option>
            <option value="reading-books">Reading</option>
            <option value="finished-books">Finished</option>
          </select>
        </div>

        <button type="submit">Search</button>
      </form>
    </div>
  </div>


  <div id="move-modal" class="modal">
    <div class="modal-content">
      <span class="close">&times;</span>
      <h2>Move Book</h2>

      <form id="move-book-form">
        <div class="form-row">
          <label for="move-from-shelf">From shelf:</label>
          <select id="move-from-shelf" name="fromShelf" required>
            <option value="" disabled selected>Select a shelf</option>
            <option value="to-read-books">To Read</option>
            <option value="reading-books">Reading</option>
            <option value="finished-books">Finished</option>
          </select>
        </div>

        <!-- To shelf -->
        <div class="form-row">
          <label for="move-to-shelf">To shelf:</label>
          <select id="move-to-shelf" name="toShelf" required disabled>
            <option value="" disabled selected>Select a shelf</option>
            <!-- options added via JS -->
          </select>
        </div>

        <!-- Title -->
        <div class="form-row">
          <label for="move-book-title">Title:</label>
          <div class="title-input-wrapper">
            <input type="text" id="move-book-title" name="title" required disabled>
            <div id="move-title-dropdown" class="title-dropdown hidden"></div>
          </div>
        </div>

        <!-- Submit button -->
        <div class="form-row">
          <button type="submit">Move Book</button>
        </div>
      </form>
    </div>
  </div>

  <div id="popup" class="modal">
    <div class="modal-content">
      <button id="close">X</button>
      <ul id="book-list"></ul>
    </div>
  </div>

  <!-- Clear Shelf modal for the each column's button -->
  <div id="clear-shelf-modal" class="modal">
    <div class="modal-content">
      <span class="close">&times;</span>
      <h2>Clear Bookshelf</h2>
      <p>Are you sure you want to clear all books from this column?</p>
      <div class="modal-actions">
        <button id="confirm-clear-shelf">Yes</button>
        <button id="cancel-clear-shelf">No</button>
      </div>
    </div>
  </div>


  <footer>
    <div class="container">
      <p>&copy; 2025 CS346 Project. All rights reserved.</p>
    </div>
  </footer>

  <script src="/js/bookshelf.js"></script>
</body>

</html>